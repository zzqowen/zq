            ,opacity=".35")
          path(d="M23 4v4a2.17 2.17 0 0 0 0-4" opacity=".4")
          rect(x="2" y="2.333" width="18" height="7.333" rx="1.333")
    div(class= fullScreen ? "iphone-indicator-bar" : "iphone-indicator-bar")
    .phone-content-box(class= fullScreen ? "phone-content-box-full" : "")
      .phone-wrapper-box
        .phone-wrapper-scroll-box
          block content

script.
  var timeDom = document.getElementById("iphone-status-bar_time");
  function handleDate(t) {
    var d = t.toString();
    return d.length > 1 ? d : '0' + d
  };
  function calcTime() {
    var dTime = new Date();
    var h = dTime.getHours();
    var m = dTime.getMinutes();
    timeDom.innerHTML = handleDate(h) + ':' + handleDate(m);
  };
  calcTime();
  setInterval(function() {
    calcTime()
  }, 1000)
