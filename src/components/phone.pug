- var phoneWidth = 375;
- var statusBarHeight = 28;
- var asideSize = 21;
- var fullScreen = false;
- var toolBar = false;
- var operatButtonList = [{"name": "旋转",},{"name": "放大",}];

style(type="text/css").
  .phone-simulator-box{
    display: inline-block;
  }
  .simulator-container {
    position: relative;
    display: inline-block;
  }
  .simulator-container-bg {
    position: absolute;
    top: 10px;
    right: 10px;
    bottom: 10px;
    left: 10px;
    border-radius: 36px;
    background-color: white;
  }
  .phone-simulator-img {
    width: #{phoneWidth + 'px'};
    position: relative;
    z-index: 2;
  }
  .phone-content-box {
    position: absolute;
    top: #{asideSize + statusBarHeight + 5 + 'px'};
    left: #{asideSize + 'px'};
    bottom: #{asideSize + 30 + 'px'};
    right: #{asideSize + 'px'};
    overflow: hidden;
    z-index: 10;
  }
  .phone-content-box-full {
    top: #{asideSize - 3 + 'px'};
    bottom: #{asideSize + 'px'};
    border-radius: 42px;
  }
  .phone-wrapper-box {
    height: 100%;
    width: #{phoneWidth - asideSize * 2 + 20 + 'px'};
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
  }
  .phone-wrapper-scroll-box {
    width: #{phoneWidth - asideSize * 2 + 'px'};
  }
  .iphone-status-bar {
    position: absolute;
    top: 26px;
    left: 0;
    width: 100%;
    background-color: transparent;
    height: #{statusBarHeight + 'px'};
    text-align: right;
    z-index: 12;
  }
  .status-bar-all {
    display: inline-block;
    line-height: #{statusBarHeight + 'px'};
    margin: 0 2px;
  }
  .status-bar-time {
    position: absolute;
    left: #{(phoneWidth/4 - 10)/2 + 'px'};
    top: 0;
    font-size: 14px;
    font-weight: 600;
  }
  .status-bar-battery {
    padding-right:  #{(phoneWidth/4 - 40)/2 + 'px'};
  }
  .iphone-indicator-bar {
    position: absolute;
    bottom: 28px;
    left: #{phoneWidth/3 + 'px'};
    background-color: black;
    width: #{phoneWidth/3 + 'px'};
    height: 5px;
    border-radius: 2.5px;
    z-index: 12;
  }

  .operating-button-container {
    font-size: 0;
    text-align: center;
  }

  .operating-button-container:after {
    content: "";
    display: inline-block;
    vertical-align: middle;
    width: 0;
    height: 100%;
  }

  .every-operating-button {
    width: 46px;
    height: 46px;
    line-height: 46px;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 8px;
    border: 1px solid #f3f3f3;
    text-align: center;
    font-size: 14px;
    font-weight: 600;
    color: white;
    display: inline-block;
    margin: 0 5px;
    cursor: pointer;
  }

  .phone-wrapper-scroll-box iframe {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

.phone-simulator-box
  if toolBar
    .operating-button-container
      each val, index in operatButtonList
        .every-operating-button= val.name
  .simulator-container
    .simulator-container-bg
    img.phone-simulator-img(src=require("src/components/images/phone-model/iphone_12.png"), alt="")
    .iphone-status-bar
      .status-bar-all.status-bar-time(id="iphone-status-bar_time")= "00:00"
      .status-bar-all.status-bar-signal
        svg(xmlns="http://www.w3.org/2000/svg" width="17" height="12")
          path(d="M1.25 6.5h1a1 1 0 0 1 1 1V10a1 1 0 0 1-1 1h-1a1 1 0 0 1-1-1V7.5a1 1 0 0 1 1-1zM5.75 5h1a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1h-1a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1zm4.5-2h1a1 1 0 0 1 1 1v6a1 1 0 0 1-1 1h-1a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1zm4.5-2h1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1h-1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z",
            ,fill-rule="evenodd")

      .status-bar-all.status-bar-wlan
